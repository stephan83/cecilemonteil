.list
  for article, slug in public.press._data
    .row.item
      .col-xs-4
        a(href=article.link)
          img.img-responsive(src='images/' + slug + '.jpg')
      .col-xs-8
        h2= article.title
        p= article.summary
        p
          if article.source
            strong= article.source
          if article.date
            | &nbsp;-&nbsp;
            = article.date
        .row
          .col-xs-10.col-sm-6.col-md-4.col-lg-3
            a.btn.btn-primary.btn-block(href=article.link) READ
    