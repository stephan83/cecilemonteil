.list
  for article, slug in public.talks._data
    .row.item
      .col-xs-4
        a(href=article.link, target='_blank')
          img.img-responsive(src='images/' + slug + '.jpg')
      .col-xs-8
        h2= article.title
        if article.summary
          p= article.summary
        p
          if article.venue
            strong= article.venue
          if article.date
            | &nbsp;-&nbsp;
            = article.date
        .row
          .col-xs-10.col-sm-6.col-md-4.col-lg-3
            a.btn.btn-primary.btn-block(href=article.link, target='_blank') VIEW
    